<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:orientation="vertical"
    tools:context="com.sjbabadi.cis4914.TrackDetailActivity">

    <TextView
        android:id="@+id/video_1"
        style="@style/MediaSelectionStyle"
        android:background="@color/muteGreen"
        android:text="Video 1"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:onClick="startVideoPlayer"/>

    <TextView
        android:id="@+id/video_2"
        style="@style/MediaSelectionStyle"
        android:background="@color/coolGray"
        android:text="Video 2"
        android:layout_marginBottom="20dp"
        android:onClick="startVideoPlayer"/>

    <TextView
        android:id="@+id/video_3"
        style="@style/MediaSelectionStyle"
        android:background="@color/muteGreen"
        android:text="Video 3"
        android:layout_marginBottom="20dp"
        android:onClick="startVideoPlayer"/>

    <TextView
        android:id="@+id/video_4"
        style="@style/MediaSelectionStyle"
        android:background="@color/coolGray"
        android:text="Video 4"
        android:onClick="startVideoPlayer"/>

</LinearLayout>