<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDashActivity">

    <Button
        android:id="@+id/play_video_btn"
        style="@style/MediaSelectionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:onClick="startPlayer"
        android:text="Example Track 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        style="@style/MediaSelectionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example Track 1"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        tools:layout_editor_absoluteX="25dp" />

    <Button
        android:id="@+id/button2"
        style="@style/MediaSelectionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example Track 2"
        app:layout_constraintBottom_toTopOf="@+id/play_video_btn"
        tools:layout_editor_absoluteX="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>